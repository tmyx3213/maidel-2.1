{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "build/main",
    "noEmit": false,
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false
  },
  "include": ["src/main/**/*"],
  "exclude": ["node_modules", "build", "dist", "src/renderer", "src/preload"]
}